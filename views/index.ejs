  <!-- Footer -->
  <footer class="mt-16 py-6 px-4 sm:px-0 text-center text-sm text-gray-500 dark:text-gray-400">
    © 2025
    <a href="https://github.com/pratyushranjn" class="text-blue-500 hover:underline" target="_blank"
      rel="noopener noreferrer">Pratyush</a>
    — Made with ☕, 😴, and lots of <code>console.log()</code>
